{{ include('partials/main.html.twig') }}

<head>

    {{ include('partials/title-meta.html.twig', {title: 'Customers'}) }}

    {{ include('partials/head-css.html.twig') }}

</head>

{{ include('partials/body.html.twig') }}

<!-- Begin page -->
<div id="layout-wrapper">

    {{ include('partials/menu.html.twig') }}

    <!-- ============================================================== -->
    <!-- Start right Content here -->
    <!-- ============================================================== -->
    <div class="main-content">

        <div class="page-content">
            <div class="container-fluid">

                {{ include('partials/page-title.html.twig', {pagetitle: 'User', title: 'New User'}) }}

                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                {{ form_start(form) }}
                                <div class="mb-3 row">
                                    <label for="example-text-input" class="col-md-2 col-form-label">{{ form_label(form.email) }}</label>
                                    <div class="col-md-10">
                                        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label for="example-text-input" class="col-md-2 col-form-label">{{ form_label(form.firstname) }}</label>
                                    <div class="col-md-10">
                                        {{ form_widget(form.firstname, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label for="example-text-input" class="col-md-2 col-form-label">{{ form_label(form.lastname) }}</label>
                                    <div class="col-md-10">
                                        {{ form_widget(form.lastname, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label for="example-text-input" class="col-md-2 col-form-label">{{ form_label(form.password) }}</label>
                                    <div class="col-md-10">
                                        {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                                    </div>
                                </div>
                                <div class="mb-3 row">
                                    <label for="example-text-input" class="col-md-2 col-form-label">{{ form_label(form.roles) }}</label>
                                    <div class="col-md-10">
                                        {{ form_widget(form.roles, {'attr': {'class': 'select2 form-control select2-multiple'}}) }}
                                    </div>
                                </div>
                        {{ form_widget(form) }}
                        <button class="btn">{{ button_label|default('Save') }}</button>
                        {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end row -->

            </div> <!-- container-fluid -->
        </div>
        <!-- End Page-content -->


        {{ include('partials/footer.html.twig') }}
    </div>
    <!-- end main content-->

</div>
<!-- END layout-wrapper -->

{{ include('partials/right-sidebar.html.twig') }}

{{ include('partials/vendor-scripts.html.twig') }}

